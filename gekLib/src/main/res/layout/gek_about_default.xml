<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gek_about_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/gek_about_default_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/gek_about_default_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:scaleType="center" />

        <LinearLayout
            android:id="@+id/gek_about_default_header_lines"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/gek_about_default_header_appname"
                style="@android:style/TextAppearance.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="PTime" />

            <TextView
                android:id="@+id/gek_about_default_header_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Version 1.0" />

            <TextView
                android:id="@+id/gek_about_default_header_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Copyright (c) 2015" />

            <TextView
                android:id="@+id/gek_about_default_header_line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="gerald.kahrer[at]gmail.com" />
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/gek_about_default_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
    </WebView>

</LinearLayout>