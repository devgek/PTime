<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar" android:id="@+id/backup_restore_toolbar"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Backup"
                android:id="@+id/backup_restore_button_backup"/>

        <Button android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Restore"
                android:id="@+id/backup_restore_button_restore"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <CheckBox android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ptime-backup.db einspielen"
                  android:id="@+id/backup_restore_checkbox_restore"
                />
    </LinearLayout>


</LinearLayout>

