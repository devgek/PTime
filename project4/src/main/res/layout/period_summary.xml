<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:id="@+id/period_summary_head_title"
            style="@style/booking_row_text_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/period_summary_head_hm"
            style="@style/booking_row_text_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/period_summary_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_widget_background_color"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" 
        android:paddingBottom="10dp">
    </ListView>

</LinearLayout>