<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/g_ColorAccent</item>
        <item name="android:textColorPrimary">@color/g_ColorTextPrimary</item>
        <item name="android:background">@color/g_ColorPrimary</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--item name="android:actionBarStyle">@style/MyActionBar</item-->
        <item name="android:windowBackground">@color/g_ColorPrimaryLight</item>
        <item name="colorPrimary">@color/g_ColorPrimary</item>
        <item name="colorPrimaryDark">@color/g_ColorPrimaryDark</item>
        <item name="colorAccent">@color/g_ColorAccent</item>
        <item name="android:textColorPrimary">@color/g_ColorTextPrimary</item>
        <item name="android:textColorSecondary">@color/g_ColorTextSecondary</item>
        <item name="android:textColor">@color/g_ColorText</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app_primary_color</item>
    </style>

    <style name="settingPageLabelFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#2764BE</item>
        <!-- item name="android:textColor">#FFFFFF</item -->
    </style>

    <style name="settingPageEditFont"></style>

    <!-- Makes a "light" equivalent of Theme.Dialog -->
    <style name="AppTheme.Dialog.Light" parent="@android:style/Theme.Dialog">
        <item name="@android:background">@color/my_light_grey1</item>
        <item name="@android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="booking_row_text_normal">
        <item name="@android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="booking_row_text_important">
        <item name="@android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.Modal" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
