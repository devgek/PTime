<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/g_ColorAccent</item>
        <!--item name="android:windowBackground">@color/g_ColorPrimaryLight</item-->
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- appBar -->
        <item name="colorPrimary">@color/g_ColorPrimary</item>
        <!-- statusBar -->
        <item name="colorPrimaryDark">@color/g_ColorPrimaryDark</item>
        <!-- screen background, shines thrue ui-elements on screen because of transparency -->
        <item name="android:windowBackground">@color/g_ColorPrimaryLight</item>
        <!-- fabs, ui controls, buttons in dialogs, category in preference dialogs -->
        <item name="colorAccent">@color/g_ColorAccent</item>
        <!-- text inside the appBar, EditText -->
        <item name="android:textColorPrimary">@color/g_ColorTextPrimary</item>
        <!-- appBar icons, not tinted; subject in preference dialogs  -->
        <item name="android:textColorSecondary">@color/g_ColorText</item>
        <!-- textView, text in popups, title in preference dialogs, title in alert dialogs -->
        <item name="android:textColor">@color/g_ColorText</item>
        <!-- the theme for alert dialogs -->
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="booking_row_text_normal">
        <item name="@android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="booking_row_text_header">
        <item name="@android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="booking_row_text_important">
        <item name="@android:textColor">@color/g_ColorAccent</item>
    </style>

</resources>
